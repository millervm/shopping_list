<%= form_for @item do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.label "List" %>
    <%= f.collection_select :list_id, current_user.lists, :id, :name, include_blank: "(Select a list)" %>
    <br></br>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br></br>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
    <br></br>
    <%= f.label :urgent %>
    <%= f.check_box :urgent %>
    <br></br>
    <%= f.submit %>
<% end %>